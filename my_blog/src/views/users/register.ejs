<style>
    /* Estilos Globais */
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f8f9fa;
        color: #333;
        line-height: 1.6;
        margin: 0;
    }

    /* Input Customizado */
    .input-custom:focus {
        outline: 0;
        box-shadow: none !important;
        border-color: #2575fc; /* Azul do gradiente para foco */
    }

    /* Caixa Externa com Gradiente */
    .caixa-externa {
        background: linear-gradient(135deg, #6a11cb, #2575fc); /* Mesmo gradiente da navbar e rodapé */
        border: none; /* Remove a borda padrão */
        padding: 2rem 2.5rem; /* Ajuste de padding */
        border-radius: 15px; /* Bordas mais arredondadas */
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15); /* Sombra consistente com os cards */
    }

    /* Título */
    .caixa-externa h1 {
        color: #fff; /* Texto branco para contraste */
        text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.3); /* Sombra sutil no texto */
    }

    /* Formulário */
    .form-label {
        color: #fff; /* Labels brancos */
    }

    .input-group-text {
        background: rgba(255, 255, 255, 0.9); /* Fundo claro para os ícones */
        color: #333;
    }

    .form-control {
        border: 1px solid #fff; /* Borda branca */
        background: rgba(255, 255, 255, 0.95);
        color: #333;
    }

    /* Botão Registrar */
    .btn-custom {
        background: linear-gradient(135deg, #ff416c, #ff4b2b);
        color: #fff !important;
        border: none;
        padding: 0.75rem 1.5rem;
        border-radius: 8px; 
        font-weight: 600; 
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        transition: all 0.3s ease; 
    }

    /* Hover do Botão */
    .btn-custom:hover {
        background: linear-gradient(135deg, #6a11cb, #2575fc); 
        color: #fff !important;
        transform: scale(1.05); 
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.25); 
        transition: all 0.3s ease; 
    }

    /* Alertas */
    .alert-danger {
        background: rgba(220, 53, 69, 0.9); /* Vermelho com transparência */
        color: #fff;
        border: none;
    }

    .alert-success {
        background: rgba(40, 167, 69, 0.9); /* Verde com transparência */
        color: #fff;
        border: none;
    }
</style>

<%- include('../partials/head', { title: 'Registrar novo usuário' }) %>

<div class="container-fluid d-flex align-items-center justify-content-center min-vh-100">
    <div class="caixa-externa">
        <h1 class="text-center display-6 fw-bold mb-4">Registrar</h1>
        <hr class="border-light">

        <% if (erro !== null) { %>
            <div class="alert alert-danger"><%= erro %></div>
        <% } %>
        
        <% if (success !== null) { %>
            <div class="alert alert-success"><%= success %></div>

            <script>
                setTimeout(() => {
                    window.location.href = "/login";
                }, 2000);
            </script>
        <% } else { %>
            <form action="/users/register" method="POST">
                <div class="form-group mb-3">
                    <label for="userName" class="form-label">Usuário</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-person"></i></span>
                        <input type="text" class="form-control input-custom" id="userName" name="userName" placeholder="Entre com o usuário" required>
                    </div>
                </div>
                <div class="form-group mb-3">
                    <label for="password" class="form-label">Senha</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-lock"></i></span>
                        <input type="password" class="form-control input-custom" id="password" name="password" placeholder="Sua Senha" required>
                    </div>
                </div>
                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-custom mt-4 w-100">Registrar</button>
                </div>
            </form>
        <% } %>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    
<script>
    window.onload = function () {
        document.getElementById('userName').focus();
    };

    document.getElementById('userName').addEventListener('input', function () {
        this.value = this.value.toLowerCase();
    });
</script>